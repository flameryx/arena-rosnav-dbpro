<launch>
    <arg name="ns" />

    <!-- Don't change it if you don't know what does it mean! -->
    <arg name="global_frame_id"   value="map"/>
    <arg name="odom_frame_id"     value="$(arg ns)_odom"/>
    <arg name="base_frame_id"     value="$(arg ns)_footprint"/>
    <arg name="model" default="burger"/>
    <arg name="agent_name" default="burger"/> 
    <arg name="local_planner" default="rosnav"   doc="local-planer type [teb, dwa, mpc, rlca, cadrl, arena, rosnav]"/>

    <!-- use fake localization-->
    <include file="$(find arena_bringup)/launch/sublaunch_training/fake_localization.launch">
      <arg name="ns"                value="$(arg ns)"/>
      <arg name="global_frame_id"   value="$(arg global_frame_id)"/>
      <arg name="odom_frame_id"     value="$(arg odom_frame_id)"/>
    </include>


    <include file="$(find arena_bringup)/launch/sublaunch_training/move_base/move_base_$(arg local_planner)_test.launch">
      <arg name="ns"                value="$(arg ns)"/>
      <arg name="model"   value="$(arg model)" if="$(eval arg('local_planner') == 'rosnav')" />
      <arg name="agent_name"     value="$(arg agent_name)" if="$(eval arg('local_planner') == 'rosnav')" />
    </include>
    
    <!-- use simulator and rviz-->
    <include file="$(find arena_bringup)/launch/sublaunch_training/flatland_simulator.launch">
        <arg name="ns" value="$(arg ns)"/>
    </include>

  </launch>