
<launch>
    <arg name="train_mode"/>
    <arg name="global_frame_id"   />
    <arg name="odom_frame_id"     />
    <arg name="base_frame_id"    />
    <arg name="waypoint_generator" />
    
    <arg name="fsm/goal_tolerance" />
    <arg name="fsm/subgoal_tolerance" />
    <arg name="fsm/subgoal_pub_period" />
    <arg name="fsm/planning_horizen" />
    
    <node pkg="arena_waypoint_generator" name="spacial_horizon" type="spacial_horizon_node" output="screen">
      <param name="fsm/goal_tolerance"   value="$(arg fsm/goal_tolerance)"/>
      <param name="fsm/subgoal_tolerance"    value="$(arg fsm/subgoal_tolerance)"/>
      <param name="fsm/subgoal_pub_period"          value="$(arg fsm/subgoal_pub_period)"/>
      <param name="fsm/planning_horizen"       value="$(arg fsm/planning_horizen)"/>
    </node>
</launch>
